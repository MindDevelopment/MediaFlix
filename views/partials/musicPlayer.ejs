<div id="music-player" class="music-player">
    <div class="player-container">
        <div class="player-info">
            <img id="album-art" src="/images/default-album-art.png" alt="Album Art" class="album-art">
            <div class="track-info">
                <div id="track-title" class="track-title">Select a track</div>
                <div id="track-artist" class="track-artist">-</div>
            </div>
        </div>
        
        <div class="player-controls">
            <button id="prev-button" class="control-button">
                <i class="fas fa-step-backward"></i>
            </button>
            <button id="play-button" class="control-button play-button">
                <i class="fas fa-play"></i>
            </button>
            <button id="next-button" class="control-button">
                <i class="fas fa-step-forward"></i>
            </button>
        </div>
        
        <div class="player-timeline">
            <span id="current-time" class="time">0:00</span>
            <div class="progress-container">
                <div id="progress-bar" class="progress-bar"></div>
            </div>
            <span id="total-time" class="time">0:00</span>
        </div>
        
        <div class="player-volume">
            <i class="fas fa-volume-up"></i>
            <input type="range" id="volume-slider" class="volume-slider" min="0" max="1" step="0.01" value="1">
        </div>
    </div>
    
    <div id="playlist" class="playlist">
        <h3>Current Playlist</h3>
        <ul id="playlist-items" class="playlist-items">
            <!-- Playlist items will be added dynamically -->
        </ul>
    </div>
</div>
